{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {
        "align": [
            true,
            "statements",
            "members",
            "elements"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "object-literal-sort-keys": false
    },
    "rules": {
        "align": [
            true,
            "statements",
            "members",
            "elements"
        ],
        "ban": [
            true,
            { "name": "fdescribe", "message": "Focused tests should not be committed." },
            { "name": "fit", "message": "Focused tests should not be committed." },
            { "name": "xdescribe", "message": "Ignored tests should not be committed." },
            { "name": "xit", "message": "Ignored tests should not be committed." }
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "jsx-boolean-value": ["never"],
        "max-classes-per-file": [false],
        "member-access": [
            true,
            "no-public"
        ],
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "prefer-method-signature": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "jsx-double"
        ]
    },
    "rulesDirectory": []
}
